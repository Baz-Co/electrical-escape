---
export interface Props {
  title: string;
}

const { title } = Astro.props;

import Header from "../components/Header.jsx";
import SideBar from "../components/SideBar.jsx";
import Breadcrumb from "../components/Breadcrumb.jsx";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
	<Header client:only="react" />
    <div id="left" class="column">
      <div class="top-left">&nbsp;</div>
      <div class="bottom">
		<SideBar client:only="react" sidebarItems={["Users", "Videos"]} />
	  </div>
    </div>
    <div id="right" class="column">
      <div class="top-right">
		<Breadcrumb client:only="react" />
	  </div>
      <div class="bottom">
		  <slot />
	  </div>
    </div>
  </body>
</html>

<style is:global>
  :root {
    --accent: 124, 58, 237;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      #da62c4 30%,
      white 60%
    );
  }
  .outline {
    border: 1px solid var(--yt-brand-youtube-red);
  }
  html {
    height: 100%;
    background-color: var(--yt-spec-base-background);
    font-family: Roboto, Arial, sans-serif, system-ui;
    font-size: 10px;
  }
  body {
    height: 100%;
    /* overflow: hidden; */
    margin: 0px; /* removes default style */
    display: flex; /* enables flex content for its children */
	flex-wrap: wrap;
    box-sizing: border-box;
  }
  .column {
    height: 100%; /* allows both columns to span the full height of the browser window */
    display: flex;
    flex-direction: column; /* stacks the left and right headers above the bottom content */
  }
  #yt-vwr-header {
    width: 100%;
    /* height: 20px; */
    color: var(--yt-brand-youtube-red);
	font-size: 2rem;
	padding: 2.5px;
    flex-shrink: 0; /* makes sure that content is not cut off in a smaller browser window */
  }
  #left,
  #yt-vwr-sidebar {
    flex-shrink: 0; /* makes sure that content is not cut off in a smaller browser window */
	min-width: 20px;
	height: 100%;
	color: green;
	padding-left: 2.5px;
	padding-right: 2.5px;
  }

  .top-left {
    flex-shink: 0;
  }

  .top-right {
    flex-shrink: 0;
    display: flex;
  }

  ul {
    /* display: flex; */
    list-style: none;
	margin: 0;
	padding: 0;
  }

  .bottom {
    flex-grow: 1; /* ensures that the container will take up the full height of the parent container */
    overflow-y: auto; /* adds scroll to this container */
  }

